<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_110sdp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="@dimen/_5sdp">


        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePopularItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_placeholder"
            android:adjustViewBounds="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_gradient" />

    </FrameLayout>

        <LinearLayout
            android:id="@+id/popularProductClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tv_popular_products_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:singleLine="true"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_8ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="bottom"
                        android:text="$"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />

                    <TextView
                        android:id="@+id/tv_price_popular_prodect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:gravity="bottom"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="bottom"
                        android:text="$"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />

                    <TextView
                        android:id="@+id/tv_price_popular_prodect2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_heartwhite" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:padding="@dimen/_2sdp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>