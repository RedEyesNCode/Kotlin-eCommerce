<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextOutLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/pink"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtAddressLineOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="Address Line-1"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12ssp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextOutLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/pink"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtAddressLineTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="Address Line-2"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12ssp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextOutLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/pink"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="Enter City"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12ssp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextOutLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/pink"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtPostalCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="Enter Postal Code"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12ssp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/EditTextOutLineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/pink"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtTelephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="Enter Telephone"
            android:inputType="text"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12ssp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.redeyesncode.andromerce.utils.customviews.CustomButtonProgressBar
        android:layout_width="match_parent"
        android:id="@+id/btnAddress"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_height="wrap_content"/>

</LinearLayout>