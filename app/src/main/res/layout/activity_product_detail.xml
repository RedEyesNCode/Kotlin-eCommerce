<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.redeyesncode.andromerce.presentation.ProductDetailViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_splash_bg"
    android:layout_height="match_parent"

    tools:context=".ui.ProductDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_186sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:id="@+id/ivMainImage"
                        app:riv_corner_radius="@dimen/_4sdp"
                        android:src="@drawable/ic_placeholder">

                    </com.makeramen.roundedimageview.RoundedImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:id="@+id/ivCategory"
                        app:riv_corner_radius="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_placeholder">

                    </com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:adjustViewBounds="true"
                        android:id="@+id/ivSubCategory"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="@dimen/_4sdp"

                        android:layout_weight="1"
                        android:src="@drawable/ic_placeholder">
                    </com.makeramen.roundedimageview.RoundedImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_9sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/lato_bold">

                </TextView>
                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#656565"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/lato_bold">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/edit_text_box_color">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Product Name"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp"

                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_discounted_price"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/lato_bold"

                        android:text="@string/product_description"
                        android:textColor="#000"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:id="@+id/tvCategoryName"
                        android:paddingTop="@dimen/_1sdp"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_11sdp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pink"
                            android:text="$ 64.00"
                            android:id="@+id/tvSellingPrice"
                            android:fontFamily="@font/lato_bold"
                            android:paddingRight="@dimen/_6sdp"
                            android:textSize="@dimen/_14sdp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:fontFamily="@font/lato_bold"
                            android:foreground="@drawable/strikethrough_drawable"
                            android:gravity="center_vertical"
                            android:alpha="0.5"
                            android:id="@+id/tvMaxPrice"
                            android:text="$105.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp">

                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:alpha="0.5"
                        android:text=""
                        android:id="@+id/tvDescription"
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btn_editListing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/background_layout_pink"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/lato_regular">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="@string/place_order"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </TableLayout>
    </ScrollView>

</LinearLayout>
</layout>