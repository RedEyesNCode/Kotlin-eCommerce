<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ViewPager for product images -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/product_images_viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- Product name TextView -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_images_viewpager"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Product Name"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Product price TextView -->
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Product Price"
        android:textColor="#000"
        android:textSize="18sp" />

    <!-- Product discount TextView -->
    <TextView
        android:id="@+id/product_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Product Discount"
        android:textColor="#F00"
        android:textSize="18sp" />

    <!-- Product discounted price TextView -->
    <TextView
        android:id="@+id/product_discounted_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_discount"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Product Discounted Price"
        android:textColor="#000"
        android:textSize="18sp" />

    <!-- Product description TextView -->
    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_discounted_price"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Product Description"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:text="Add to Cart"
        android:textColor="#FFF"
        android:textSize="18sp" />

</RelativeLayout>
