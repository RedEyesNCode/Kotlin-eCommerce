<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NewAddressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"

        android:orientation="vertical"
        android:layout_marginTop="@dimen/_12sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Your Address"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:weightSum="2">
            <EditText
                android:id="@+id/shipFirstName"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:hint="First Name"
                android:textSize="@dimen/_8sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </EditText>
            <EditText
                android:id="@+id/shipLastName"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingHorizontal="@dimen/_4sdp"
                android:hint="Last Name"
                android:textSize="@dimen/_8sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </EditText>
        </LinearLayout>
        <EditText

            android:id="@+id/shipPhoneNumber"
            android:layout_marginTop="@dimen/_4sdp"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_4sdp"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Phone Number"
            android:textSize="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/background_edit_text">
        </EditText>
        <EditText
            android:id="@+id/shipAddress"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_4sdp"
            android:hint="Address"
            android:textSize="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/background_edit_text">
        </EditText>
        <EditText
            android:id="@+id/shipApartment"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_4sdp"
            android:hint="Apartment"
            android:textSize="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/background_edit_text">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:weightSum="2">
            <EditText
                android:id="@+id/shipCityReal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:hint="City"
                android:textSize="@dimen/_8sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </EditText>
            <TextView
                android:id="@+id/shipCity"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:text="Select State"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/shipCountry"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="United States"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:textSize="@dimen/_8sdp"
                android:singleLine="true"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </TextView>
            <EditText
                android:id="@+id/shipPostalCode"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:inputType="number"
                android:singleLine="true"
                android:hint="Postal code"
                android:textSize="@dimen/_8sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:background="@drawable/background_edit_text">
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"

        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/btn_BacktoCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/border_light_black_line"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Back to product"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/btn_continuePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/border_light_black_line"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Place Enquiry to Support. "
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>

</LinearLayout>